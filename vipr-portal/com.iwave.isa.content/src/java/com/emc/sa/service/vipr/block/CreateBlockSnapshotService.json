{
  baseKey:"CreateBlockSnapshot.Block",
  serviceId:"CreateBlockSnapshot",
  fields:{
    project:{
      type:"assetType.vipr.project",
      lockable: true
    },

    storageType:{
      type:"assetType.vipr.blockVolumeOrConsistencyType",
      lockable:true,
      initialValue:"volume"
    },
    
    volumes:{
      type:"assetType.vipr.snapshotBlockVolume"
    },
    
    type:{
      type: "assetType.vipr.blockSnapshotType",
      required: "false",
      lockable: true
    },
        
    readOnly: {
      type: "boolean",
      initialValue: "false",
      required: "false",
      lockable: true
    },
    
    name:{
      type:"text",
      validation:{
        min:2,
        max:128
      }
    },
    
    advanced:{
      type:"group",
      lockable: true,
      collapsed:true,
      items:{
        linkedSnapshotName:{
          type:"text",
          required: "false",
          validation:{
            min:2,
            max:128
          }
        },
        linkedSnapshotCount:{
          type:"number",
          required: "false",
          initialValue: "1",
          validation:{
              min:1
          }
        },
        linkedSnapshotCopyMode:{
          type:"assetType.vipr.linkedSnapshotCopyMode",
          required: "false"
        }
      }
    },
    
    scheduler:{
      type:"group",
      lockable: true,
      collapsed: true,
      items:{
          schedulerEnabled: {
            type: "assetType.vipr.schedulerEnabled",
            initialValue: "none",
            required: "false",
          },
          
          schedulerRangeRecurrence: {
            type: "number",
          	required: "false",
          	initialValue: "0"
          },
          
          schedulerStartTime: {
          	type: "assetType.vipr.schedulerStartTime",
          	required: "false",
          	initialValue: "01:00",
          },
          
          schedulerRecurrence: {
            type: "number",
            required: "false",
            initialValue: "1"
          },
          schedulerRecurrenceUnit: {
            type: "assetType.vipr.schedulerRecurrenceUnit",
            required: "false" ,
            initialValue: "2"
          },
          schedulerRecurrenceDay: {
            type: "assetType.vipr.schedulerRecurrenceDay",
            required: "false",
            initialValue: "1"
          }
      }	
    }
  }
}
